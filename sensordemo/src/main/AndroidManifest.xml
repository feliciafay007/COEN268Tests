<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.scu.edu.sensordemo" >

    <uses-sdk
        android:maxSdkVersion="21"
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DisplayListOfSensors"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WeatherSensor"
            android:label="@string/title_activity_weather_sensor" >
        </activity>
        <activity
            android:name=".ShakeSensor"
            android:label="@string/title_activity_shake_sensor" >
        </activity>
        <activity
            android:name=".ShakeSensor2"
            android:label="@string/title_activity_shake_sensor2" >
        </activity>
    </application>

</manifest>
